<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Avalonia" Version="0.10.18" />
		<PackageReference Include="Avalonia.Desktop" Version="0.10.18" />
		<!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
		<PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="0.10.18" />
		<PackageReference Include="Avalonia.ReactiveUI" Version="0.10.18" />
		<PackageReference Include="Markdown.Avalonia" Version="0.10.11" />
		<PackageReference Include="ReactiveUI" Version="18.3.1" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="6.0.0" />
		<PackageReference Include="Autofac" Version="6.4.0" />
	</ItemGroup>

	<ItemGroup>
	  <AvaloniaResource Include="icon.icns" />
	  <AvaloniaResource Include="icon.png" />
	  <AvaloniaResource Include="Assets\**" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\RoadCaptain\RoadCaptain.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Models\" />
	  <Folder Include="Views\" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Dialogs\WhatIsNewWindow.axaml.cs">
	    <DependentUpon>WhatIsNewWindow.axaml</DependentUpon>
	  </Compile>
	</ItemGroup>
</Project>
